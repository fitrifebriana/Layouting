<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B0E0E6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/table_weather"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context="id.or.codelabs.layouting.TableLayoutExample">

    <TableRow
        android:id="@+id/row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="Weather Table"
            android:gravity="center"
            android:layout_span="4"/>
    </TableRow>

    <TableRow
        android:id="@+id/row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_notext"
            android:text=""/>

        <TextView
            android:id="@+id/txt_date_1"
            android:text="Feb 8"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_date_2"
            android:text="Feb 9"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_date_3"
            android:text="Feb 10"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow
        android:id="@+id/row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_category_1"
            android:text="Day High"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_value_1"
            android:text="26°C"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_value_2"
            android:text="23°C"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_value_3"
            android:text="17°C"
            android:gravity="center_horizontal"/>

    </TableRow>

    <TableRow
        android:id="@+id/row_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_category_2"
            android:text="Day Low"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_value_4"
            android:text="21°C"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_value_5"
            android:text="20°C"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/txt_value_6"
            android:text="15°C"
            android:gravity="center_horizontal"/>

    </TableRow>

    <TableRow
        android:id="@+id/row_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txt_category_3"
            android:text="Condition"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_value_1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cloud_1"/>

        <ImageView
            android:id="@+id/img_value_2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cloud_2"/>

        <ImageView
            android:id="@+id/img_value_3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/cloud_3"/>

    </TableRow>
</TableLayout>
