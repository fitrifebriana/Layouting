<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RelativeLayoutExample">

    <ImageView
        android:id="@+id/img_logo_relative"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nemo"/>

    <EditText
        android:id="@+id/txt_name_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_logo_relative"
        android:inputType="text"
        android:hint="nama"/>

    <EditText
        android:id="@+id/txt_email_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_name_relative"
        android:inputType="textEmailAddress"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="email"/>

    <EditText
        android:id="@+id/txt_password_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_email_relative"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:hint="password"/>

    <Button
        android:id="@+id/btn_login_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_password_relative"
        android:hint="Masuk"
        android:background="#000000"
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
</RelativeLayout>